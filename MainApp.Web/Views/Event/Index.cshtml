@model IEnumerable<MainApp.BLL.Entities.Event>
@using MainApp.BLL.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Index";
}

@{
    var user = await UserManager.GetUserAsync(User);
    var userFullName = "Brak zalogowanego uzytkownika";
    if (user != null)
    {
        userFullName = $"{user.FirstName} {user.LastName}";
    }
}


<h1>Activity user's</h1>


<div class="card mt-5 shadow-lg">
   <div class="card-header">
         List of events
   </div>
      <div class="card-body">
         <div class="d-flex">
            <h5 class="card-title"> @userFullName </h5>
         </div>
         <p class="card-text">
            <div class="row">
               <div class="col">


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
                @*<label asp-for="First().User.Email"> </label>*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @*<a asp-action="UserBudget" asp-route-id="@item.User.Id">@item.User.Email</a>*@
                @item.Email
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>

            </div>
         </div>
       </p>
     <a href="/Home/index" class="btn btn-primary">Go to Home</a>
  </div>
</div>