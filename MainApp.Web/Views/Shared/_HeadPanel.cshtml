@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav flex-grow-1">

    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
    {
        @if (HttpContextAccessor.HttpContext.User.Identity.Name.Contains("user"))
        {
            <li class="nav-item">
                <a style="margin-left:1.35rem; margin-right:1.35rem;" class="btn btn-nav" asp-area="" asp-controller="User" asp-action="Index">Users</a>
            </li>
        }
    }
</ul>