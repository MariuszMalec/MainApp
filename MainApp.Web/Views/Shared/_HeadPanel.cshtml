@using MainApp.BLL.Context
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject ApplicationDbContext _context

<ul class="navbar-nav flex-grow-1">

    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
    {
        @if (HttpContextAccessor.HttpContext.User.Identity.Name.Contains("admin"))
        {

            var userEmail = this.HttpContextAccessor.HttpContext.User.Identity.Name;
            var findIdUser = _context.Users.Where(u=>u.Email == userEmail).Select(u=>u.Id).FirstOrDefault();

            <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Profile
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-action="Details" asp-controller="User" asp-route-id="@findIdUser">Details</a> <br />                       
                            </div>
            </div>
        }
    }
</ul>