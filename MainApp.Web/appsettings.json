{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "DatabaseProvider": "Postgres",
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Server = localhost; Port=5432; User Id=postgres; Password=Alicja13a; Database=MainAppWeb;",
    "SqlServer": "Server=localhost\\sqlexpress;Database=MainAppWeb;Trusted_Connection=True;MultipleActiveResultSets=True;Encrypt=false;",
    "Sqlite": "Data Source=.\\DataBaseUser\\MainAppSqlite.db",
    "MySql": "Server = 127.0.0.1; uid=root; pwd=''; Database=mainappusersDb;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "outputTemplate": "{Timestamp:HH:mm:ss} {Level:u5}] {Message:lj} {Properties:j}{NewLine}{Exception}",
        "restrictedToMinimumLevel": "Information"
      },
      {
        "Name": "File",
        "Args": { "path": "./logs.log" },
        "outputTemplate": "{Timestamp:HH:mm:ss} {Level:u5}] {Message:lj} {Properties:j}{NewLine}{Exception}",
        "restrictedToMinimumLevel": "Debug"
      }
    ]

  }
}
